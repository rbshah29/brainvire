<?xml version="1.0" encoding="UTF-8"?>
<!-- for document of customer booking room -->
<odoo>
	 <record id="document_form" model="ir.ui.view">
            <field name="name">Regi</field>
            <field name="model">customer.document</field>
            <field name="arch" type="xml">
                <form string="room">
                <group>
                    <field name="document"/>
                    <field name="document_name"/>
                </group>
                </form>
            </field>
        </record>


        <record id="room_tree" model="ir.ui.view">
            <field name="name">Regi</field>
            <field name="model">customer.document</field>
            <field name="arch" type="xml">
                <tree string="room">
                	<field name="document"/>
                    <field name="document_name"/>
                </tree>
            </field>
        </record>


        <record model="ir.actions.act_window" id="document_action">
            <field name="name">Regi</field>
            <field name="res_model">customer.document</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Enter details
                </p>
            </field>
        </record>

    

</odoo>