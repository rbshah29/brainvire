<?xml version="1.0" encoding="UTF-8"?>
<!-- guest view list  -->
<odoo>
	 <record id="guest_form" model="ir.ui.view">
            <field name="name">Guest</field>
            <field name="model">customer.guest</field>
            <field name="arch" type="xml">
                <form string="room">
                    <group>
                    <field name="name"/>
                    <field name="document_guest"/>
                </group>
                </form>
            </field>
        </record>


        <record id="room_tree" model="ir.ui.view">
            <field name="name">Guest</field>
            <field name="model">customer.guest</field>
            <field name="arch" type="xml">
                <tree string="room">
                	<field name="name"/>
                    <field name="document_guest"/>
                </tree>
            </field>
        </record>


        <record model="ir.actions.act_window" id="guest_action">
            <field name="name">Guest</field>
            <field name="res_model">customer.guest</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Enter details
                </p>
            </field>
        </record>

    
</odoo>